<div class="navbar navbar-expand-sm navbar-light navbar-main">
  <div class="navbar-logo">
    <%= link_to root_path, class: "navbar-brand" do %>
    <% key = "mx1t9zdgzglh6ggga5nf" %>
      <%= cl_image_tag key, alt: "Les Problèmes Logo" %>
    <% end %>
    <p>Télé-réalité, genre & sexualité</p>
  </div>

  <div class="navbar-right">

    <%= link_to "Acceuil", root_path, class:"navbar-titles"  %>

    <div class="btn-group">
      <button type="button" class="navbar-menu-dropdown "><%= link_to "Articles", articles_path %></button>
      <button type="button" id="navbar-arrow-dropdown" class="navbar-menu-dropdown dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </button>
      <div id="navbar-menu-dropdown" class="dropdown-menu dropdown-menu-right">
        <% categories =  Article.all.map(&:category_list).flatten.uniq %>
        <% categories.each do |category| %>
          <%= link_to "#{category}", articles_path(category: category) %>
        <% end %>
      </div>
    </div>
    <%= link_to "Manifeste", manifeste_path, class:"navbar-titles"  %>
    <%= link_to "Contact", contact_path, class:"navbar-titles"  %>
    <% if user_signed_in? %>
      <div class="dropdown">
        <button class="btn btn-dropdown dropdown-toggle" id="navbar-arrow-dropdown" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Admin
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "Nouvel article", new_article_path, class: "dropdown-item"  %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
