<div class="navbar navbar-expand-sm navbar-light navbar-main">
  <div class="navbar-logo">
    <%= link_to root_path, class: "navbar-brand" do %>
    <% key = "mx1t9zdgzglh6ggga5nf" %>
      <%= cl_image_tag key, alt: "Les Problèmes Logo" %>
    <% end %>
    <p>Télé-réalité, genre & sexualité</p>
  </div>

  <div class="navbar-right">

    <%= link_to "Acceuil", root_path, class:"navbar-titles"  %>

    <div class="btn-group">
      <button type="button" class="navbar-menu-dropdown "><%= link_to "Articles", articles_path %></button>
      <button type="button" class="navbar-menu-dropdown dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu dropdown-menu-right">
        <% categories =  Article.all.map(&:category_list).flatten.uniq %>
        <% categories.each do |category| %>
          <%= link_to "#{category}", articles_path(category: category) %>
        <% end %>
      </div>
    </div>
    <%= link_to "Manifeste", root_path, class:"navbar-titles"  %>
    <%= link_to "Contact", root_path, class:"navbar-titles"  %>
    <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <% end %>
  </div>
</div>
